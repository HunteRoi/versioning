{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./lib",
		"strict": true,
		"resolveJsonModule": true,
		"strictNullChecks": false,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"baseUrl": "./src"
	},
	"include": ["src/**/*"],
	"exclude": ["lib/*", "coverage/*", "tcr"]
}
