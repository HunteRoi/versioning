{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "baseUrl": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["lib/*", "coverage/*", "tcr"]
}
